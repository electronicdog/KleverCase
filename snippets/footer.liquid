<footer class="site-footer" role="contentinfo">

  <div class="wrapper">

    <div class="grid">

      {% if settings.footer_display_contact %}
      <div class="grid-item large--one-third">
        <h3 class="footer-title">{{ settings.footer_contact_title }}</h3>
        <p>
          {% if settings.footer_contact_text != blank %}
            {{ settings.footer_contact_text }}
          {% else %}
            Add some text to show here in your <a href="admin/themes" title="Edit theme settings"> theme settings</a>.
          {% endif %}
        </p>
      </div>
      {% endif %}

      <div class="grid-item large--one-third">
      {% if settings.footer_display_footnav %}  
        <div class="grid-item large--one-half pad_pull_left">
	        <h3 class="footer-title">{{ settings.footer_footnav_title }}</h3>
	        <p><!-- {{ settings.footer_footnav_text }} -->
				{% for link in linklists.footer_nav_one.links %}
					<a href="{{ link.url }}">{{ link.title }}</a><br/>
				{% endfor %}
			<p>
		</div>
		<div class="grid-item large--one-half pad_pull_left">
			<h3 class="footer-title">{{ settings.footer_nav2_title }}</h3>
	        <p><!-- {{ settings.footer_footnav_texttwo }} -->
	        	{% for link in linklists.footer_nav_two.links %}
					<a href="{{ link.url }}" target="_blank">{{ link.title }}</a><br/>
				{% endfor %}
	        <p>
		</div>
	  {% endif %}
      </div>
      
	  
	  <div class="grid-item large--one-third">
      
      {% if settings.footer_display_newsletter %}
        <h3 class="footer-title">{{ settings.footer_newsletter_title }}</h3>
        {% include 'newsletter-form' %}
      {% endif %}
      
      {% if settings.footer_display_social %}
        <h3 class="footer-title">{{ settings.footer_social_title }}</h3>
        
        {% comment %}
          Loop through the persistent theme settings and list out each social network link.
        {% endcomment %}
        
        <ul class="inline-list">
          {% if settings.twitter_link != blank %}<a href="{{ settings.twitter_link }}" title="{{ shop.name }} on Twitter" target="_blank"><i class="fa fa-twitter fa-2x pad_pull_left"></i></a>{% endif %}
          {% if settings.facebook_link != blank %}<a href="{{ settings.facebook_link }}" title="{{ shop.name }} on Facebook" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>{% endif %}
          {% if settings.youtube_link != blank %}<a href="{{ settings.youtube_link }}" title="{{ shop.name }} on YouTube" target="_blank"><i class="fa fa-youtube fa-2x"></i></a>{% endif %}
          {% if settings.instagram_link != blank %}<a href="{{ settings.instagram_link }}" title="{{ shop.name }} on Instagram" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>{% endif %}
          {% if settings.pinterest_link != blank %}<a href="{{ settings.pinterest_link }}" title="{{ shop.name }} on Pinterest" target="_blank"><i class="fa fa-pinterest fa-2x"></i></a>{% endif %}
        </ul>
      {% endif %}
      
      </div>
      
    </div>

    <hr class="basepad">

    {% comment %}
      Loop through available payment methods and show their icons.
    {% endcomment %}
    {% if shop.enabled_payment_types != empty %}
      <!-- <h4 class="text-center">Accepted Payments</h4> -->
    {% endif %}
